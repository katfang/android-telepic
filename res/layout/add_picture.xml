<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:weightSum="1">
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/instructionText" android:layout_gravity="center_horizontal"
            android:text="Draw this phrase!" android:textAlignment="center"
            android:editable="false" android:textSize="30dp" android:padding="10dp"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Apples are falling."
            android:id="@+id/picPhraseText" android:textSize="20dp"/>
    <com.katfang.test.DrawingView
            android:id="@+id/drawing"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#FFFFFF" />
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Done!"
            android:id="@+id/picDoneButton"/>
</LinearLayout>