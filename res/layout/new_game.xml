<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:weightSum="1">
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/instructionText" android:layout_gravity="center_horizontal"
            android:text="Start a new game with a phrase!" android:textSize="40dp" android:textAlignment="center"
            android:editable="false" android:padding="10dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/startPhraseText" android:layout_gravity="center_horizontal" android:editable="true"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go!"
            android:id="@+id/startGoButton" android:layout_gravity="center_horizontal"/>
</LinearLayout>