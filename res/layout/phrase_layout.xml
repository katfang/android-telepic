<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:weightSum="1">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="New"
                android:id="@+id/newButton" android:layout_weight="1"/>
        <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Join"
                android:id="@+id/joinButton" android:layout_weight="1"/>
        <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="List"
                android:id="@+id/listButton" android:layout_weight="1"/>
    </LinearLayout>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/instructionText" android:layout_gravity="center_horizontal"
            android:text="Describe this picture!" android:textAlignment="center"
            android:editable="false" android:textSize="30dp" android:padding="10dp"/>
    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/phrasePic" android:layout_gravity="center_horizontal" android:layout_weight="1"
            android:background="#FFFFFF"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/phraseText" android:layout_weight="1"/>
        <ImageButton android:id="@+id/phraseDoneButton" android:layout_height="wrap_content" android:layout_width="wrap_content"
                     android:src="@android:drawable/ic_menu_send" android:layout_gravity="right"/>
    </LinearLayout>
</LinearLayout>